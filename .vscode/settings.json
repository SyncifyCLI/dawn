{
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": false,
    "**/pnpm-lock.yaml": true
  },
  "json.schemas": [
    {
      "url": "https://unpkg.com/@syncify/schema@0.2.5/syncify.json",
      "fileMatch": [
        "package.json"
      ],
    }
  ],
  "[liquid]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "sissel.shopify-liquid"
  }
}